{
  "name": "s2j-about-window",
  "version": "1.0.0",
  "description": "Using SwiftUI, reimplementing the AppKit-based “About Window”.",
  "main": "README.md",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "postinstall": "cd tools/docs-linter && npm install",
    "prelint:docs": "git submodule update --remote --merge && cd tools/docs-linter && (npm ci || (rm -f package-lock.json && npm install)) && npm run build",
    "lint:docs": "NODE_PATH=./tools/docs-linter/node_modules textlint --config ./tools/docs-linter/wordpress/.textlintrc.wp.json ./README.md ./docs/**/*.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stein2nd/s2j-about-window.git"
  },
  "keywords": [
    "SwiftUI",
    "AppKit",
    "About Window"
  ],
  "author": "Koutarou ISHIKAWA",
  "license": "GPL-2.0-or-later",
  "type": "module",
  "bugs": {
    "url": "https://github.com/stein2nd/s2j-about-window/issues"
  },
  "homepage": "https://github.com/stein2nd/s2j-about-window#readme",
  "files": [
    "README.md",
    "COMMON_SPEC.md",
    "LICENSE",
    "tools/"
  ]
}
